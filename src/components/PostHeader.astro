---
import { slugify, formatDate } from '../js/utils'
import { Image } from '@astrojs/image/components'

const { category, author, title, date, image} = Astro.props
---
<header>
    <div class="container">
        <small>
            <a href={`/blog/category/${slugify(category)}/`} class="badge">{category}</a>
        </small>
        <h1 class="h2">{title}</h1>
        <p>by <a href={`/blog/author/${slugify(author)}/`}>{author}</a> {formatDate(date)}</p>
    </div>
    <Image 
        src={image.src} 
        alt={image.alt}
        width={1200}
        height={600}
        format='avif'
        fit='cover'
        quality={80}
        aspectRatio='5:2'
        class='hero-image'
    />
</header>